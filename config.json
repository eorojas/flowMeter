{
  "simulation": {
    "default_samples": 10000,
    "default_pressure": 100,
    "default_temperature": 125
  },
  "sensors": {
    "flow": {
      "frequency_hz": 100,
      "resolution_bits": 24,
      "equation": "5000 + 100 * sin(t)",
      "noise_amplitude": 10.0,
      "noise_distribution": "normal"
    },
    "pressure": {
      "frequency_hz": 10,
      "resolution_bits": 8,
      "equation": "RefP + 20 * cos(t/2)",
      "noise_amplitude": 5.0
    },
    "temperature": {
      "frequency_hz": 10,
      "resolution_bits": 8,
      "equation": "RefT + 5 * sin(t/5)",
      "noise_amplitude": 1.0
    }
  },
  "processing": {
    "flow_equation": "F + F * ((P - RefP) / 255) * ((T - RefT) / 255)",
    "default_filter_type": "low_pass",
    "filters": [
      {
        "type": "low_pass",
        "target": "pressure",
        "alpha": 0.1
      },
      {
        "type": "median",
        "target": "temperature",
        "window_size": 7
      },
      {
        "type": "low_pass",
        "target": "flow",
        "alpha": 0.2
      }
    ]
  },
  "output": {
    "type": "file", 
    "target": "output.csv"
  }
}
